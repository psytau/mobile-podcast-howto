<%= form_for(@podcast) do |f| %>
  <% if @podcast.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@podcast.errors.count, "error") %> prohibited this podcast from being saved:</h2>

      <ul>
      <% @podcast.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :slug %><br>
    <%= f.text_field :slug, :class => 'topcoat-text-input' %>
  </div>
  <div class="field">
    <%= f.label :course_name %><br>
    <%= f.text_field :course_name, :class => 'topcoat-text-input'  %>
  </div>
  <div class="field">
    <%= f.label :podcast_name %><br>
    <%= f.text_field :podcast_name, :class => 'topcoat-text-input'  %>
  </div>
  <div class="field">
    <%= f.label 'Feed Url' %><br>
    <span id="feed_url_">
      <%= f.text_field :feed, :class => 'topcoat-text-input'  %>
    <span>
  </div>
  <div class="field">
    <%= link_to "(or create your own feed)", new_hosted_feed_path %>
    <%= collection_select(:podcast, :hosted_feed_id,  @hosted_feeds, :id, :title, {prompt: 'Your Feeds'})  %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => 'topcoat-textarea' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
